{
  "name": "aula-virtual-desktop",
  "version": "1.0.0",
  "description": "Aula Virtual 2.0 - Desktop Application for Universidad Autónoma de Aguascalientes",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:electron": "npm run build:main && electron .",
    "start": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:dev": "npm run build:main && NODE_ENV=development npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "dev:renderer": "vite",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:dev": "npm run build:dev && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win:dev": "npm run build:dev && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:dev": "npm run build:dev && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "education",
    "desktop",
    "electron",
    "react",
    "offline-first"
  ],
  "author": "UAA Development Team",
  "license": "Proprietary",
  "type": "commonjs",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.5",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "zustand": "^5.0.8"
  },
  "build": {
    "appId": "mx.edu.uaa.aulavirtual",
    "productName": "Aula Virtual UAA",
    "copyright": "Copyright © 2025 Universidad Autónoma de Aguascalientes",
    "buildVersion": "1.0.0",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "public/icons",
        "to": "icons",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icons/icon-256.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icons/icon-256.ico",
      "uninstallerIcon": "public/icons/icon-256.ico",
      "installerHeaderIcon": "public/icons/icon-256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Aula Virtual UAA"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icons/icon.icns",
      "category": "public.app-category.education",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Aula Virtual UAA ${version}",
      "icon": "public/icons/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icons/icon-256.ico",
      "category": "Education"
    },
    "publish": {
      "provider": "github",
      "owner": "danielmares32",
      "repo": "JulioEPA"
    }
  }
}
